{
  "env": {
    "browser": true,
    "es2022": true,
    "mocha": true,
    "node": true
  },
  "plugins": ["import"],
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "project": "./lint.tsconfig.json",
    "sourceType": "module"
  },
  "rules": {
    "import/order": "warn"
  },
  "ignorePatterns": ["/dist/"]
}
